{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "../../packages/shared/**/*",
    "src/**/*.d.ts",
  ],
  "exclude": [
    "src/**/__tests__/*",
    "src/**"
  ],
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "shared/*": [
        "../../packages/shared/*"
      ]
    },
    "types":["node"]
  }
}